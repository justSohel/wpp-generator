<?php
namespace {{namespace}}\Http\Controllers;

class AdminController {
    public static function addMenu() {
        add_menu_page(
            '{{name}}',
            '{{name}}',
            'manage_options',
            '{{slug}}',
            [self::class, 'renderPage']
        );
    }

    public static function renderPage() {
        echo '<div class="wrap"><h1>{{name}}</h1><p>Welcome to {{name}}!</p></div>';
    }
}